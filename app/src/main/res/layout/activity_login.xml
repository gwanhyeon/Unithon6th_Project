<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    tools:context="com.example.wonjun.testuniton.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_rice"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="113dp"
            app:srcCompat="@drawable/icn_main"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="302dp"
                android:layout_height="49dp"
                android:layout_marginTop="262dp"
                android:gravity="center"
                android:background="@drawable/icn_id" >

                <EditText
                    android:id="@+id/login_text_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center|left"
                    android:hint="아이디"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColorHint="@color/color_05"
                    android:textSize="12sp"
                    android:layout_marginLeft="30dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="302dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/icn_password" >

                <EditText
                    android:id="@+id/login_text_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center|left"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:textSize="12sp"
                    android:textColor="#e7e7e7"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColorHint="#e7e7e7"
                    android:layout_marginLeft="30dp"
                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="14dp">

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="306dp"
                    android:layout_height="49dp"
                    android:background="@drawable/btn_login"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/btn_facebook"
                    android:layout_width="309dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/btn_facebook" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="168dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="79dp"
                    android:background="@drawable/newid" />

            </LinearLayout>
        </LinearLayout>




    </RelativeLayout>

</LinearLayout>
