<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    tools:context="com.example.wonjun.testuniton.WelcomeActivity">


    <ImageView
        android:id="@+id/img_rice"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:srcCompat="@drawable/ic_ricehello" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="312dp"
        android:layout_marginLeft="328dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icn_next"
            android:onClick="onClick" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="345dp"
        android:layout_marginLeft="39dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="342dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/invalid_name" />

    </LinearLayout>


</RelativeLayout>
