<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_gram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:gravity="center_horizontal"
            android:text="해남 꿀 고구마 2kg"
            android:textColor="#1b1b1b"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_down"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_up"
            android:layout_marginEnd="12dp"
            android:onClick="onClick"
            android:text="-" />

        <Button
            android:id="@+id/btn_up"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/tv_gram"
            android:layout_alignBottom="@+id/tv_gram"
            android:layout_marginEnd="25dp"
            android:layout_toStartOf="@+id/tv_cnt"
            android:onClick="onClick"
            android:text="+" />

        <TextView
            android:id="@+id/tv_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_up"
            android:layout_alignBottom="@+id/btn_up"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/btn_down"
            android:text="1"
            android:textColor="#1b1b1b"
            android:textSize="16sp"/>


    </RelativeLayout>

</LinearLayout>
